<?xml version="1.0" encoding="utf-8"?>
<jnlp spec="1.0+"
	codebase="http://rzymek.github.io/mapgrid/dist/" 	
 	href="http://rzymek.github.io/mapgrid/dist/mapgrid.jnlp">
