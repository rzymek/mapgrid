<project name="mapgrid" default="build">		
	<target name="build">
		<exec executable="svnversion" outputproperty="version">
			<arg line="src"/>
		</exec>
		<jar destfile="mapgrid.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="pl.mapgrid.mask.gui.JMaskGridMain" />
			</manifest>
		</jar>
		<signjar jar="mapgrid.jar" alias="mapgrid" storepass="${keystore.pass}" keystore="mapgrid.keystore" />
	</target>
	
	<target name="create.keystore">
		<delete file="mapgrid.keystore" />
		<exec executable="keytool">
			<arg line="-genkeypair" />
			<arg line="-alias mapgrid" />
			<arg line="-validity 36500" />
			<arg line='-dname "CN=Rzymek FIA, OU=FIA, O=FIA, L=Warszawa, S=Mazowieckie, C=US" ' />
			<arg line="-keystore mapgrid.keystore" />
			<arg line='-storepass "${keystore.pass}"' />
		</exec>
	</target>
	
	<target name="sign.lib">
		<signjar jar="lib/jcoord-1.0.jar" alias="mapgrid" storepass="${keystore.pass}" keystore="mapgrid.keystore" />
		<signjar jar="lib/josm-tested.jar" alias="mapgrid" storepass="${keystore.pass}" keystore="mapgrid.keystore" />
	</target>
</project>